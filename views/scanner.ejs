<%- include ('partials/header.ejs') %>
    <style>
        body {
            background-color: #000000 !important;
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
        }

        #conteiner-drone {
            display: contents;
            justify-content: space-evenly;
            align-items: baseline;
        }

        #scan {
            position: absolute;
            width: 300px;
            height: 400px;
            background-color: transparent;
            border: 4px solid #351102 !important;
        }

        #btn-scan-two {
            position: relative;
            background-color: var(--verde-bege);
            width: 200px;
            height: 50px;
            color: white;
            bottom: 90px;
            right: 270px;
        }
    </style>
    <div id="conteiner-drone">
        <div id="scan"></div>
        <img src="<%- img %>">
        <a href="/home">
            <button class="btn btn-block rounded-3" id="btn-scan-two" onclick="alterarTextoBotao()">Escanear
                Folha</button>
        </a>
        <script>
            function alterarTextoBotao() {
                var botao = document.getElementById("btn-scan-two"); botao.innerHTML = "Escaneando!";
            } </script>
    </div>