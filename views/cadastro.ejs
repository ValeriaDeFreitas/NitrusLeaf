<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>

        <div class="conteiner py-5 " id="card-conteiner-css">
            <div class="card" id="card-css">
                <div class="card-header mx-3">
                    <h2>Cadastrar</h2>
                </div>
                <div id="row">
                    <div class="card-body mx-5 my-5" id="card-body-css">
                        <h3>Dados da conta</h3>
                        <form action="/createUser" method="post">
                        <div id="row">
                            <div id="column">
                                <label>Nome:</label>
                                <input class="form-control" type="nome" name="nome" placeholder="Digite seu nome"
                                    required>
                                <br>
                                <label>Telefone:</label>
                                <input class="form-control" type="telefone" name="telefone"
                                    placeholder="Insira seu telefone" required>
                                <br>
                                <label>E-mail:</label>
                                <input class="form-control" type="sobrenome" name="email"
                                    placeholder="email@exemplo.com" required>
                                <br>
                                <label>Senha:</label>
                                <input class="form-control" type="password" name="password"
                                    placeholder="Insira uma senha com no mínimo 8 caracteres" required>
                              
                            </div>
                            <div id="column">
                                <label>Sobrenome:</label>
                                <input class="form-control" type="sobrenome" name="sobrenome" placeholder="sobrenome"
                                    required>
                                <br>
                                <label>Celular:</label>
                                <input class="form-control" type="celular" name="celular"
                                    placeholder="Insira um número de celular" required>
                                <br>
                                <br>
                                <br>
                                <br>
                                <label>Confirmar senha:</label>
                                <input class="form-control" type="password" name="password"
                                    placeholder="Confirme sua senha" required>
                                <br>
                            </div>
                        </div>
                        <br>
                        <input type="submit" value="Cadastrar" class="btn btn-success btn-block" id="btn-cadastro">
                        </form>
                        <h6>Já possui conta?<a href="/login">Faça o login</a></h6>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <%- include ('partials/footer.ejs') %>