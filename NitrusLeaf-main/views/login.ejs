<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<% if (messages.danger) { %>
    <div class="alert alert-danger">
        <%= messages.danger %>
    </div>
<% } %>

<% if (messages.success) { %>
    <div class="alert alert-success">
        <%= messages.success %>
    </div>
<% } %>

<div class="container col-4">
    <h2>Entrar</h2>
    <div class="card mt-4">
        <div class="card-body m-auto">
            <p style="color: red; font-size: 0.7em;">Você precisa estar logado para acessar os recursos do painel.</p>
            <form action="/authenticate" method="post">
                <label>E-mail:</label>
                <input class="form-control" type="email" name="email" placeholder="email@exemplo.com" required>
                <br>
                <label>Senha:</label>
                <input class="form-control" type="password" name="senha" placeholder="Insira sua senha" required>
                <br>
                <input type="submit" value="Entrar" class="btn btn-success btn-block">
            </form>
            <hr>
            <h6>Não possui conta?<a href="/cadastroUsuarios">Cadastre-se!</a></h6>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs') %>
